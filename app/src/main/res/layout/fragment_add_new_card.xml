<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.AddNewCardFragment">

    <data>
       <variable
           name="viewModel"
           type="com.blabla.dontruinyourlaundry.viewModels.AddedCardsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name_of_cloth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/name_of_cloth"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/added_symbols_recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toBottomOf="@id/toolbar_add_card"
            tools:text="Название одежды" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:background="@color/lilac_200"
            app:layout_constraintBottom_toTopOf="@id/added_symbols_recycler_view"
            app:layout_constraintEnd_toStartOf="@id/name_of_cloth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_add_card"
            >

        </ImageView>

        <TextView
            android:id="@+id/text_on_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_photo"
            app:layout_constraintBottom_toBottomOf="@id/item_image"
            app:layout_constraintEnd_toEndOf="@+id/item_image"
            app:layout_constraintStart_toStartOf="@id/item_image"
            app:layout_constraintTop_toTopOf="@id/item_image">

        </TextView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add_card"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lilac_500"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/added_symbols_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/add_symbol_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_image"
            >
        </androidx.recyclerview.widget.RecyclerView>
        <ImageButton
            android:id="@+id/add_more_symbol_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/lilac_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/added_symbols_recycler_view"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        </ImageButton>
        <ImageView
            android:id="@+id/add_symbol_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/lilac_500"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/add_more_symbol_button"
            app:layout_constraintBottom_toBottomOf="@id/add_more_symbol_button"
            app:layout_constraintTop_toTopOf="@id/add_more_symbol_button"
            app:layout_constraintEnd_toStartOf="@id/symbol_meaning">

        </ImageView>

        <TextView
            android:id="@+id/symbol_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/add_symbol_button"
            app:layout_constraintBottom_toBottomOf="@id/add_symbol_button"
            app:layout_constraintTop_toTopOf="@id/add_symbol_button"
            app:layout_constraintEnd_toEndOf="@id/add_more_symbol_button"
            android:text="@string/add_more_symbols">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


