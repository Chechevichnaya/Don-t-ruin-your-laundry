<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DontRuinYourLaundry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_light_white_dark</item>
        <item name="colorAccent">@color/lilac_700</item>
        <item name="colorPrimaryVariant">@color/lilac_700</item>
        <item name="colorOnPrimary">@color/lilac200_light_lilac700_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lilac_500</item>
        <item name="colorSecondaryVariant">@color/lilac_700</item>
        <item name="colorOnSecondary">@color/black_light_white_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="FullScreenDialogFragment" parent="Theme.AppCompat.DialogWhenLarge">
        <item name="android:statusBarColor">@color/lilac_500</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>